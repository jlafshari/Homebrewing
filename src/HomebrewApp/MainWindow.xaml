<Window x:Class="HomebrewApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vw="clr-namespace:HomebrewApp"
        Title="Ultimate Home Brewing" MinHeight="450" MinWidth="550">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <TabControl>
            <TabItem Header="Recipes" HorizontalContentAlignment="Left" VerticalContentAlignment="Top">
                <vw:RecipesView x:Name="RecipesView" />
            </TabItem>
            <TabItem Header="Batches"></TabItem>
            <TabItem Header="Settings" HorizontalContentAlignment="Left" VerticalContentAlignment="Top">
                <vw:SettingsView />
            </TabItem>
        </TabControl>
    </ScrollViewer>
</Window>
